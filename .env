# Chat&Talk GPT - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# LLM API Configuration (Required)
# ============================================
# Groq - COMPLETELY FREE (No credit card required, recommended!)
# Get free API key from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: Ollama (Local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ============================================
# Email Notification Configuration
# ============================================
# Gmail SMTP for sending notifications
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Admin email to receive notifications
ADMIN_EMAIL=aarushloop273@gmail.com

# ============================================
# Twilio SMS & WhatsApp Configuration
# ============================================
# Get from https://www.twilio.com/
# - Sign up for free account
# - Get Account SID and Auth Token from console
# - Get a phone number for SMS/WhatsApp
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Firebase Push Notifications (Optional)
# ============================================
# Get from Firebase Console
# 1. Create Firebase project
# 2. Add Firebase to your app
# 3. Get FCM deprecated server key from Project Settings
FIREBASE_DEPRECATED_KEY=your_firebase_key_here

# Firebase Admin SDK (for advanced features)
# Download service account key from Firebase Console > Project Settings > Service Accounts
# Save as firebase-credentials.json in the backend folder
FIREBASE_PROJECT_ID=your_firebase_project_id

# ============================================
# Supabase Database (Optional - for scaling)
# ============================================
# Get from Supabase Dashboard
# 1. Create a new project at https://supabase.com
# 2. Go to Settings > API
# 3. Copy the URL and anon/public key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# ============================================
# Google Sheets Integration (Optional)
# ============================================
# Get credentials from Google Cloud Console
# 1. Go to https://console.cloud.google.com
# 2. Create a project
# 3. Enable Google Sheets API and Google Drive API
# 4. Create Service Account and download JSON credentials
# 5. Share your spreadsheet with the service account email
GOOGLE_CREDENTIALS_FILE=credentials.json
SPREADSHEET_NAME=Chat&Talk GPT Activity Log

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# ============================================
# ElevenLabs Voice Configuration (Optional)
# ============================================
# Get free API key from https://elevenlabs.io
# Free tier includes 10,000 characters per month
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID for female voice (Aakansha)
# Recommended: Rachel (sweet, calm, confident) - voice_id: "21m00Tcm4TlvDq8ikWAM"
# Other options: 
#   - Sarah (female): "YQ7EMkPQ5O3Yy5rK9F5g"
#   - Jessica (female): "CG4pR2cy2vVqKlYZ9H8g"
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ============================================
# Sarvam.ai Voice Configuration (Optional)
# ============================================
# Get free API key from https://sarvam.ai/
# Indian language TTS with support for: Hindi, Tamil, Telugu, Kannada,
# Malayalam, Bengali, Marathi, Gujarati, Punjabi, and more
SARVAM_API_KEY=sk_1le0tism_sCvHjv4dLTip9BX4QnQDu6fH
# ============================================
# Image Generation Configuration
# ============================================
# Uses Pollinations.ai (Free) by default
IMAGE_GENERATION_MODEL=flux
IMAGE_GENERATION_WIDTH=1024
IMAGE_GENERATION_HEIGHT=1024

# Optional: Hugging Face API Key for advanced models
# Get from https://huggingface.co/settings/tokens
# HF_API_KEY=your_huggingface_key_here

# ============================================
# New Features - Free API Configurations
# ============================================

# News API (Optional - Uses free NewsAPI.org)
# Get free key from https://newsapi.org/
# NEWS_API_KEY=your_newsapi_key_here

# Recipe API (Optional - Uses TheMealDB free API)
# No API key required - uses free tier
# RECIPE_API_KEY=your_recipe_api_key_here

# Currency Exchange (Optional - Uses exchangerate.host free API)
# No API key required for basic usage
# EXCHANGERATE_API_KEY=your_exchangerate_key_here

# FreeCurrencyAPI (Alternative currency API)
# Get free key from https://freecurrencyapi.com/
# FREECURRENCY_API_KEY=your_freecurrency_key_here

# Google Calendar (Optional - For calendar sync)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_ID=your_calendar_id

# Calendar storage (local JSON - no API needed)
# Events are stored in memory/calendar_events.json
CALENDAR_STORAGE=local

# ============================================
# Feature Toggles
# ============================================

# ============================================
# AI Aggregator - Multi-Provider Support
# ============================================
# Get free API keys from respective platforms

# OpenAI API (Free tier available)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# Anthropic Claude API (Free tier available)
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Google Gemini API (Free tier available)
# Get from https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_key_here

# Cohere API (Free tier available)
# Get from https://dashboard.cohere.com/
COHERE_API_KEY=your_cohere_key_here

# Mistral AI (Free tier available)
# Get from https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_key_here

# Perplexity AI (Free trial credits for new accounts)
# Get from https://www.perplexity.ai/
# Note: Perplexity offers free trial credits - very competitive pricing
# Alternative: Use GROQ (completely free) above
PERPLEXITY_API_KEY=your_perplexity_key_here

# Default AI Provider (auto, groq, openai, anthropic, google, cohere, mistral, perplexity)
DEFAULT_AI_PROVIDER=auto

# Enable web search by default
WEB_SEARCH_ENABLED=true
WEB_SEARCH_VERIFIED_ONLY=false

# ============================================
# Authentication
# ============================================
# JWT Secret for session management (auto-generated if not set)
JWT_SECRET=your_jwt_secret_here_change_in_production

# Session expiry in hours
SESSION_EXPIRY_HOURS=24

# Allow guest access (without login)
ALLOW_GUEST_ACCESS=true
TRANSLATION_ENABLED=true
CALENDAR_ENABLED=true
CODE_EXECUTION_ENABLED=true
FLASHCARDS_ENABLED=true
NEWS_ENABLED=true
CALCULATOR_ENABLED=true
DICTIONARY_ENABLED=true
RECIPES_ENABLED=true
CURRENCY_ENABLED=true
SUPABASE_URL=https://xyz.supabase.co
SUPABASE_ANON_KEY=your_anon_key
